<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ROI_STAFF_APP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ROI_STAFF_APP"
    Shell.FlyoutBehavior="Disabled"
    >

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        />
    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate local:SignInPage}"
        Route="SignInPage"
        />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate local:SignUpPage}"
        Route="SignUpPage"/>

    <ShellContent
        Title="Contacts"
        ContentTemplate="{DataTemplate local:ContactsPage}"
        Route="ContactsPage"/>

    <ShellContent
        Title="Human Resource"
        ContentTemplate="{DataTemplate local:HRPage}"
        Route="HRPage"/>

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage"/>
</Shell>

